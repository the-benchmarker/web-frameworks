        <version.light-4j>[2.1,2.2)</version.light-4j>
        <version.jackson>[1.0,)</version.jackson>
        <version.undertow>[2.2,2.3)</version.undertow>
        <version.json-schema-validator>[1.0,)</version.json-schema-validator>
